{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "converter-saas/backend/Dockerfile",
    "buildContext": "converter-saas/backend",
    "watchPatterns": [
      "converter-saas/backend/**"
    ]
  },
  "deploy": {
    "healthcheckPath": "/api/health/",
    "restartPolicyType": "ON_FAILURE"
  }
}